file = {:home/leonardo/Mendeley/Science/2014 - Rohr, Saavedra, Bascompte - On the structural stability of mutualistic systems.pdf:pdf},
issn = {0036-8075, 1095-9203},
journal = {Science},
number = {6195},
pages = {1253497},
pmid = {25061214},
title = {{On the structural stability of mutualistic systems}},
url = {http://www.sciencemag.org/content/345/6195/1253497},
volume = {345},
year = {2014}
}
