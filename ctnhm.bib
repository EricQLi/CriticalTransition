author = {Chisholm, Ryan A and Pacala, Stephen W},
doi = {10.1073/pnas.1009387107},
file = {:home/leonardo/Mendeley/Proceedings of the National Academy of Sciences/2010 - Chisholm, Pacala - Niche and neutral models predict asymptotically equivalent species abundance distributions in high-diversity e.pdf:pdf},
